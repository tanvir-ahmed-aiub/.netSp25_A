
@{
    ViewBag.Title = "Index";
}

@{ 
    bool HasCourse(int cId) {
        foreach (var c in ViewBag.CourseStudents) {
            if (cId == c.CourseId) return true;

        }
        return false;
    }
}

<h2>Index</h2>
<form method="post">
    <ul>

        @foreach (var item in Model)
        {
            <li>
                <input type="checkbox" checked="@HasCourse(@item.Id)" value="@item.Id" name="Courses[]"/> @item.Name (@item.CourseStudents.Count/@item.MaxCapacity)
            </li>
        }

    </ul>
    <input type="submit" value="Register" class="btn btn-success" />
</form>

